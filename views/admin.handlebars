                            {{!-- </form> --}}

                            <form action="/reset" method="GET">
                                <button class="btn myBtn m-1" type="submit" name="button">Reset</button>
                            </form>
                            
                        </div>
                        
                    </div>
                </div>
                <div class="col-sm-1"></div>
            </div>
        </section>

    </div>
</body>
</html>